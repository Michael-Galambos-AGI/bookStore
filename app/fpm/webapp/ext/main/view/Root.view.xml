<mvc:XMLView
    id="RootView"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.f"
    xmlns:tnt="sap.tnt"
    controllerName="fpm.ext.main.controller.Root" >
    <tnt:ToolPage>
        <tnt:header>
            <f:ShellBar
                title="{i18n>appTitle}"
                secondTitle="{i18n>appDescription}" />
        </tnt:header>
        <tnt:sideContent>
            <tnt:SideNavigation id="sideNavigation">
                <tnt:NavigationList
                    itemSelect=".onSelectSideNav">
                    <tnt:NavigationListItem
                        key="BooksMain"
                        icon="sap-icon://course-book"
                        text="Books" />
                    <tnt:NavigationListItem
                        key="BooksGenres"
                        icon="sap-icon://list"
                        text="Genres" />
                </tnt:NavigationList>
            </tnt:SideNavigation>
        </tnt:sideContent>
        <tnt:mainContents>
            <NavContainer id="appContent" />
        </tnt:mainContents>
    </tnt:ToolPage>
</mvc:XMLView>