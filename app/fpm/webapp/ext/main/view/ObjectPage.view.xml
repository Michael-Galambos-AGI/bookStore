<mvc:View xmlns="sap.uxap"
    xmlns:m="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:macros="sap.fe.macros"
    controllerName="fpm.ext.main.controller.ObjectPage">
    <ObjectPageLayout>
        <headerTitle>
            <ObjectPageDynamicHeaderTitle>
                <expandedHeading>
                    <m:Title text="{title}" />
                </expandedHeading>
                <expandedContent>
                    <m:Link
                        press=".onPressGenre"
                        text="{genre/name}" />
                </expandedContent>
            </ObjectPageDynamicHeaderTitle>
        </headerTitle>
        <sections>
            <ObjectPageSection>
                <ObjectPageSubSection>
                    <macros:Form
                        id="annotation"
                        metaPath="@com.sap.vocabularies.UI.v1.FieldGroup#Details"
                        readOnly="true" />
                </ObjectPageSubSection>
            </ObjectPageSection>
        </sections>
    </ObjectPageLayout>
</mvc:View>