<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:u="sap.ui.unified">

	<Dialog id="bookDialog" title ="create" content="{path:'/Books', length: 1, parameters: {$$updateGroupId: 'create'}, templateShareable: true}">
		<VBox class="sapUiResponsiveMargin" id="idVBox">
            <Label text="title"/>
			<Input width="100%" value="{title}"/>
			<Label text="tag"/>
			<Select items="{/Genres}" selectedKey="{genre_ID}" forceSelection="false">
				<core:Item key="{ID}" text="{name}"/>
			</Select>
		</VBox>
		<beginButton>
			<Button text="save" press=".onPressSave"/>
		</beginButton>
		<endButton>
			<Button text="discard" press=".onPressDiscard"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>